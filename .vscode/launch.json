{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--inspect"
            }
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4420"
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "pattern": "Local:.+ (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--inspect"
            }
        }
    ]
}