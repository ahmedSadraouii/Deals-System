{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "API_HOST",
    "__NEXT_IMAGE_OPTS"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "generated/**"
      ],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    }
  }
}
