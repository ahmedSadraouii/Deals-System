{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "__NEXT_IMAGE_OPTS",
    "ADOBE_SCRIPT",
    "NODE_ENV",
    "NEXTAUTH_URL",
    "CONTENT_API_BASE_URL",
    "AUTH_API_BASE_URL",
    "USER_API_BASE_URL",
    "ADBE_API_BASE_URL",
    "IMAGE_REMOTE_HOSTNAME",
    "NEXTAUTH_URL"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "generated/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    }
  }
}
